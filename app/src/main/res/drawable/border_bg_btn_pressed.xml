<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="12dp"
        android:top="6dp" />

    <!-- corners设置圆角，只适用于rectangle -->
    <corners android:radius="@dimen/keep_corner_dimen" />

    <!-- stroke设置描边 -->
    <stroke
        android:width="2dp"
        android:color="@color/keep_btn_pressed" />
</shape>